<!DOCTYPE html>
        <!-- Jumbotron -->
        <div class="jumbotron text-center">
            <h1>Preguntas</h1>
            <br/>
            <!-- form 1 -->
            <form class="form-horizontal" action="/quizes" method="GET">
                <!-- form content here -->
                <div class="form-group">
                    <!-- label and control -->
                    <label for="search" class="control-label col-sm-4">Buscar quizzes</label>
                    <div class="col-sm-4">
                        <input type="text" name="search" id="search" class="form-control" placeholder="Texto"/>
                    </div>
                    <div class="col-sm-4 text-left">
                        <button type="submit" class="btn btn-success">Enviar</button>
                    </div>
                </div>
            </form>
        </div>
        <!-- list-->
        <% for (var i=0; i < quizes.length; i++) {%>
        <div class="row">
            <div class="col-xs-7">
                <p><a href="/quizes/<%= quizes[i].id %>"><%= quizes[i].pregunta %></a></p>
            </div>
            <% if (session.user) { %>
            <div class="col-xs-5">
                <span class="pull-right">
                    <div style="float:left; padding-bottom: 2px;">
                        <a href="/quizes/<%= quizes[i].id %>/edit">
                            <button type="button" class="btn btn-default btn-sm">Editar</button>
                        </a>
                    </div>
                    <div style="float:left; padding-left: 2px;">
                        <form action="/quizes/<%= quizes[i].id %>?_method=delete" method="POST">
                            <button type="submit" class="btn btn-default btn-sm" onclick="return confirm('Borrar <%= quizes[i].pregunta %>');">Borrar</button>
                        </form>
                    </div>
                </span>
            </div>
            <% } %>
        </div>
        <!-- <hr/> -->
        <% } %>
        <% if (session.user) { %>
        <!-- crear pregunta -->
        <div class="row">
            <div class="col-xs-7">
                <!-- <a href="/quizes/new">
                    <button type="button" class="btn btn-primary">Crear pregunta</button>
                </a> -->
                <a href="/quizes/new" class="btn btn-primary" role="button">Crear pregunta</a>
            </div>
        </div>
        <% } %>
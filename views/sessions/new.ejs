<!DOCTYPE html>
        <!-- Jumbotron -->
        <div class="jumbotron text-center">
            <h1>Login</h1>
        </div>
        <!-- __form.ejs  -->
        <form class="form-horizontal" action="/login" method="POST">
            <% if (errors && errors.message) { %>
            <!-- warning -->
            <div class="alert alert-danger" id='danger-alert'>
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                    <p><strong>Warning: </strong><%= errors.message %></p> 
            </div>
            <% } %>
            <!-- form content here -->
            <% 
            var hasError = '', username = '';
            if (errors) {
                username = errors.login.value;
                if(errors.login.error)  
                    hasError = ' has-error has-feedback';
            } %>
            <div class="form-group <%= hasError %>">
                <!-- label and control -->
                <label for="login" class="control-label col-sm-3">Login:</label>
                <div class="col-sm-5">
                    <input type="text" name="login" id="login" class="form-control" value="<%= username %>" placeholder="username"/>
                    <% if (errors && errors.login.error) { %>
                        <span class="glyphicon glyphicon-remove form-control-feedback"></span>
                    <% } %>
                </div>
            </div>
            <% 
            var hasError = '';
            if (errors && (errors.login.error || errors.password.error))  { 
                hasError = ' has-error has-feedback';
            } %>
            <div class="form-group <%= hasError %>">
                <!-- label and control -->
                <label for="password" class="control-label col-sm-3">Password:</label>
                <div class="col-sm-5">
                    <input type="password" name="password" id="password" class="form-control" placeholder="password"/>
                    <% if (errors && (errors.login.error || errors.password.error)) { %>
                        <span class="glyphicon glyphicon-remove form-control-feedback"></span>
                    <% } %>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-5 col-sm-offset-3">
                    <button type="submit" class="btn btn-primary">Login</button>
                </div>
            </div>
        </form>
